<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/qcontent"
        android:layout_width="400dp"
        android:layout_height="179dp"
        android:text="Hello World!"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.253" />

    <TextView
        android:id="@+id/qnumber"
        android:layout_width="99dp"
        android:layout_height="71dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/qcontent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TrueBtn"
        android:layout_width="112dp"
        android:layout_height="59dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="113dp"
        android:backgroundTint="#23CC04"
        android:onClick="answeredTrue"
        android:text="True"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qcontent" />

    <Button
        android:id="@+id/FalseBtn"
        android:layout_width="112dp"
        android:layout_height="59dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#A80404"
        android:onClick="answeredFalse"
        android:text="False"
        app:iconTint="#C6FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TrueBtn"
        app:layout_constraintTop_toBottomOf="@+id/qcontent" />

    <Button
        android:id="@+id/CheatBtn"
        android:layout_width="112dp"
        android:layout_height="59dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="112dp"
        android:onClick="answeredCheat"
        android:text="Cheat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TrueBtn" />

    <TextView
        android:id="@+id/pointsTextQ"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>